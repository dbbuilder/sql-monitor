        {
          "datasource": "MonitoringDB",
          "format": "table",
          "rawSql": "SELECT TOP 20\n  s.ServerName AS Server,\n  r.DatabaseName AS [Database],\n  r.RecommendationType AS Type,\n  r.RecommendationSeverity AS Severity,\n  r.RecommendationText AS Recommendation,\n  CAST(r.EstimatedImprovementPercent AS DECIMAL(5,1)) AS [Est. Improvement %],\n  CAST(r.AvgDurationMs AS INT) AS [Avg Duration (ms)],\n  r.TotalExecutionCount AS Executions,\n  r.DetectionTime AS Detected\nFROM dbo.QueryPerformanceRecommendations r\nINNER JOIN dbo.Servers s ON r.ServerID = s.ServerID\nWHERE r.IsImplemented = 0\nORDER BY\n  CASE r.RecommendationSeverity\n    WHEN 'Critical' THEN 1\n    WHEN 'High' THEN 2\n    WHEN 'Medium' THEN 3\n    WHEN 'Low' THEN 4\n  END,\n  r.EstimatedImprovementPercent DESC;",
          "refId": "A"
        }
      ],
      "title": "Top 20 Recommendations",
      "type": "table"
