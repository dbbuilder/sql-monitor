          "datasource": "MonitoringDB",
          "format": "table",
          "rawSql": "SELECT\n  ar.RuleID,\n  ar.RuleName AS [Rule Name],\n  ar.MetricCategory AS Category,\n  ar.MetricName AS [Metric],\n  CASE WHEN ar.IsEnabled = 1 THEN 'Yes' ELSE 'No' END AS Enabled,\n  ar.CriticalThreshold AS [Critical Threshold],\n  ar.HighThreshold AS [High Threshold],\n  ar.MediumThreshold AS [Medium Threshold],\n  ar.LowThreshold AS [Low Threshold],\n  COUNT(DISTINCT CASE WHEN aa.IsResolved = 0 THEN aa.AlertID END) AS [Active Alerts],\n  COUNT(DISTINCT CASE WHEN ah.RaisedAt >= DATEADD(DAY, -7, GETUTCDATE()) THEN ah.HistoryID END) AS [Last 7 Days]\nFROM dbo.AlertRules ar\nLEFT JOIN dbo.ActiveAlerts aa ON ar.RuleID = aa.RuleID\nLEFT JOIN dbo.AlertHistory ah ON ar.RuleID = ah.RuleID\nGROUP BY ar.RuleID, ar.RuleName, ar.MetricCategory, ar.MetricName, ar.IsEnabled,\n         ar.CriticalThreshold, ar.HighThreshold, ar.MediumThreshold, ar.LowThreshold\nORDER BY ar.RuleName;",
          "refId": "A"
