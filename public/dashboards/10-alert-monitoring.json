        {
          "datasource": "MonitoringDB",
          "format": "table",
          "rawSql": "SELECT TOP 50\n  aa.AlertID,\n  s.ServerName AS Server,\n  ar.RuleName AS [Alert Rule],\n  aa.Severity,\n  aa.CurrentValue AS [Current Value],\n  aa.ThresholdValue AS Threshold,\n  aa.Message,\n  aa.RaisedAt AS [Raised At],\n  DATEDIFF(MINUTE, aa.RaisedAt, GETUTCDATE()) AS [Duration (min)],\n  CASE WHEN aa.IsAcknowledged = 1 THEN 'Yes' ELSE 'No' END AS Acknowledged\nFROM dbo.ActiveAlerts aa\nINNER JOIN dbo.AlertRules ar ON aa.RuleID = ar.RuleID\nINNER JOIN dbo.Servers s ON aa.ServerID = s.ServerID\nWHERE aa.IsResolved = 0\nORDER BY\n  CASE aa.Severity\n    WHEN 'Critical' THEN 1\n    WHEN 'High' THEN 2\n    WHEN 'Medium' THEN 3\n    WHEN 'Low' THEN 4\n  END,\n  aa.RaisedAt DESC;",
          "refId": "A"
        }
      ],
